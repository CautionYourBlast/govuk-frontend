{% from "../scot-gov-tag/macro.njk" import scotGovTag -%}
<h2 id="task-list-status" class="ds_task-list-status-heading">Application incomplete</h2>
<nav aria-labelledby="task-list-status" class="ds_task-list-status">
    <p>You have completed 1 of 4 sections.</p>
    <p><a href="#task2">Skip to first incomplete section</a></p>
</nav>
{% set idPrefix = params.idPrefix if params.idPrefix else "task-list" %}
<ul class="ds_task-list {%- if params.classes %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  {% for item in params.items %}
    {%- set hintId = idPrefix + "-" + loop.index + "-hint" -%}
    {%- set statusId = idPrefix + "-" + loop.index + "-status" -%}
    <li class="ds_task-list__task {%- if item.href %} ds_task-list__task--with-link{% endif %}{%- if item.classes %} {{ item.classes }}{% endif %}">
      <div class="ds_task-list__task-details">
        {% if item.href %}
          <a class="ds_link ds_task-list__task-link {%- if item.title.classes %} {{ item.title.classes }}{% endif %}" href="{{ item.href }}" aria-describedby="{{ hintId + " " if item.hint }}{{ statusId }}">{{ item.title.html | safe if item.title.html else item.title.text }}</a>
        {% else %}
          <div {%- if item.title.classes %} class="{{ item.title.classes }}"{% endif %}>{{ item.title.html | safe if item.title.html else item.title.text }}</div>
        {% endif %}
        {% if item.hint %}
          <div id="{{ hintId }}" class="ds_task-list__task-summary ds_hint-text">
            {{ item.hint.html | safe if item.hint.html else item.hint.text }}
          </div>
        {% endif %}
      </div>
      <div class="ds_task-list__task-statuses {%- if item.status.classes %} {{ item.status.classes }}{% endif %}" id="{{ statusId }}">
        {% if item.status.tag %}
          {{ scotGovTag(item.status.tag) | indent(4) | trim }}
        {% else %}
          {{ item.status.html | safe if item.status.html else item.status.text }}
        {% endif %}
      </div>
    </li>
  {% endfor %}
</ul>
