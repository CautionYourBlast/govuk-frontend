{% from "../scot-gov-tag/macro.njk" import scotGovTag -%}

<div class="ds_phase-banner
  {%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <div class="ds_wrapper">  
    <p class="ds_phase-banner__content">
      {{ scotGovTag({
        text: params.tag.text,
        html: params.tag.html,
        classes: "ds_tag  ds_phase-banner__tag"
      }) | indent(4) | trim }}
      <span class="ds_phase-banner__text">
        {{ params.html | safe if params.html else params.text }}
      </span>
    </p>
  </div>
</div>
