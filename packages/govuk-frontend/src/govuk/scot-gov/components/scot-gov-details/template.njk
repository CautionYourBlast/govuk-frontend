<details {%- if params.id %} id="{{params.id}}"{% endif %} class="ds_details {%- if params.classes %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %} {{- " open" if params.open }}>
  <summary class="ds_details__summary">
    <span class="ds_details__summary-text">
      {{ params.summaryHtml | safe if params.summaryHtml else params.summaryText }}
    </span>
  </summary>
  <div class="ds_details__text">
    {{ caller() if caller else (params.html | safe if params.html else params.text) }}
  </div>
</details>