{# Set classes for this component #}
{%- set classNames = "ds_breadcrumbs" -%}

{% if params.classes %}
  {% set classNames = classNames + " " + params.classes %}
{% endif -%}

{% if params.collapseOnMobile %}
  {% set classNames = classNames + " ds_breadcrumbs--collapse-on-mobile" %}
{% endif -%}

<nav aria-label="Breadcrumb" {% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  <ol class="ds_breadcrumbs">
  {% for item in params.items %}
    {% if item.href %}
    <li class="ds_breadcrumbs__item">
      <a class="ds_breadcrumbs__link" href="{{ item.href }}"{% for attribute, value in item.attributes %} {{attribute}}="{{value}}"{% endfor %}>{{ item.html | safe if item.html else item.text }}</a>
    </li>
    {% else %}
    <li class="ds_breadcrumbs__item" aria-current="page">{{ item.html | safe if item.html else item.text }}</li>
    {% endif %}
  {% endfor %}
  </ol>
</nav>
